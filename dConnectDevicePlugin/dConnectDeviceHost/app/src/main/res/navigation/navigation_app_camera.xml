<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_app_camera"
    app:startDestination="@id/host_camera_manager">

    <fragment
        android:id="@+id/host_camera_manager"
        android:name="org.deviceconnect.android.deviceplugin.host.activity.recorder.camera.ManagerStartingFragment">

        <action
            android:id="@+id/action_check_to_permission"
            app:destination="@+id/host_camera_permission_fragment"
            app:popUpTo="@id/host_camera_manager"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/host_camera_permission_fragment"
        android:name="org.deviceconnect.android.deviceplugin.host.activity.recorder.camera.PermissionFragment"
        android:label="host_camera_permission_fragment"
        tools:layout="@layout/fragment_host_permission_confirmation">

        <action
            android:id="@+id/action_permission_to_usages_stats"
            app:destination="@+id/host_camera_usage_stats_fragment"
            app:popUpTo="@id/host_camera_permission_fragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_permission_error_dialog"
            app:destination="@id/host_camera_permission_error_dialog" />

    </fragment>

    <fragment
        android:id="@+id/host_camera_usage_stats_fragment"
        android:name="org.deviceconnect.android.deviceplugin.host.activity.recorder.camera.UsageStatsFragment"
        android:label="host_camera_usage_stats_fragment"
        tools:layout="@layout/fragment_host_usage_stats_confirmation">

        <action
            android:id="@+id/action_usages_stats_main"
            app:destination="@+id/host_camera_main_fragment"
            app:popUpTo="@id/host_camera_usage_stats_fragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_usages_stats_error_dialog"
            app:destination="@id/host_camera_usage_stats_error_dialog" />

    </fragment>

    <fragment
        android:id="@+id/host_camera_main_fragment"
        android:name="org.deviceconnect.android.deviceplugin.host.activity.recorder.camera.CameraMainFragment"
        android:label="host_camera_main_fragment"
        tools:layout="@layout/fragment_host_camera_main">

    </fragment>

    <dialog
        android:id="@+id/host_camera_permission_error_dialog"
        android:name="org.deviceconnect.android.deviceplugin.host.activity.fragment.PermissionErrorDialogFragment"
        android:label="host_camera_permission_error_dialog" />

    <dialog
        android:id="@+id/host_camera_usage_stats_error_dialog"
        android:name="org.deviceconnect.android.deviceplugin.host.activity.fragment.UsageStatsErrorDialogFragment"
        android:label="host_camera_usage_stats_error_dialog" />

</navigation>