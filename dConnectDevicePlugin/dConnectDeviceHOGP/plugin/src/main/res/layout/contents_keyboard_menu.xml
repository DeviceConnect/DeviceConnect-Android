            android:layout_weight="1"
            android:background="@drawable/hogp_keyboard_button"
            android:text="@string/activity_control_key_2"/>

        <Button
            android:id="@+id/activity_control_key_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
