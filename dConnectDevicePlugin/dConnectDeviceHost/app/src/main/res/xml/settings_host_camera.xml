<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="映像設定"
        app:iconSpaceReserved="false">

        <ListPreference
            app:key="camera_picture_size"
            app:title="静止画解像度"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:key="camera_preview_size"
            app:title="プレビュー解像度"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="preview_framerate"
            app:title="フレームレート (fps)"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="preview_bitrate"
            app:title="ビットレート (KB)"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="preview_i_frame_interval"
            app:title="キーフレームインターバル (秒)"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:entries="@array/video_encoder_names"
            app:entryValues="@array/video_encoder_values"
            app:iconSpaceReserved="false"
            app:key="preview_mime_type"
            app:title="エンコーダ"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="preview_use_software_encoder"
            android:title="ソフトウェアエンコーダ"
            app:summary="MediaCodec でソフトウェアエンコーダを優先して使用します。"
            app:iconSpaceReserved="false" />

        <ListPreference
            app:entries="@array/video_white_balance_names"
            app:entryValues="@array/video_white_balance_values"
            app:key="preview_white_balance"
            app:title="ホワイトバランス"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="preview_intra_refresh"
            app:title="イントラリフレッシュ"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="音声設定"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="audio_enabled"
            android:title="音声"
            app:summary="配信に音声を含めます。"
            app:iconSpaceReserved="false" />

        <EditTextPreference
            android:defaultValue="64"
            android:key="preview_audio_bitrate"
            android:singleLine="true"
            android:title="ビットレート (KB)"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:defaultValue="@string/settings_audio_sampling_rate"
            android:entries="@array/settings_audio_sampling_rates"
            android:entryValues="@array/settings_audio_sampling_rates"
            android:key="preview_audio_sample_rate"
            android:title="サンプリングレート"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:defaultValue="1"
            android:key="preview_audio_channel"
            android:singleLine="true"
            android:title="チャンネル"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="preview_audio_aec"
            android:title="エコーキャンセラー"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>


    <PreferenceCategory
        android:title="配信設定"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="broadcast_enabled"
            android:title="配信"
            app:summary="Broadcast 配信を優先で行います。"
            app:iconSpaceReserved="false" />

        <EditTextPreference
            android:defaultValue="rtmp://localhost:12345"
            android:singleLine="true"
            app:key="broadcast_uri"
            android:title="URL"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>


    <PreferenceCategory
        android:title="MotionJPEG 設定"
        app:iconSpaceReserved="false">

        <EditTextPreference
            android:defaultValue="0"
            android:key="mjpeg_port"
            android:singleLine="true"
            android:title="ポート番号"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:defaultValue="80"
            android:key="preview_quality"
            android:singleLine="true"
            android:title="クオリティ (%)"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>


    <PreferenceCategory
        android:title="RTSP 設定"
        app:iconSpaceReserved="false">

        <EditTextPreference
            android:defaultValue="1"
            android:key="rtsp_port"
            android:singleLine="true"
            android:title="ポート番号"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>


    <PreferenceCategory
        android:title="SRT 設定"
        app:iconSpaceReserved="false">

        <EditTextPreference
            android:defaultValue="1"
            android:key="srt_port"
            android:singleLine="true"
            android:title="ポート番号"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>