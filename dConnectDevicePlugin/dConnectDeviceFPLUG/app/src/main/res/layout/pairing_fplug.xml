<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8sp"
        android:background="@color/setting_header_color"
        android:gravity="center"
        android:text="@string/setting_pairing_title"
        android:textColor="@color/setting_header_text_color"
        android:textSize="16sp" />

    <View style="@style/horizontalLine" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="@string/setting_pairing_bluetooth"
                android:textColor="@color/setting_text_color"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bluetooth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/button_blue"
                android:text="@string/setting_pairing_bluetooth_setting"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/setting_pairing_start_pairing"
                android:textColor="@color/setting_text_color"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/b_fplug" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/setting_pairing_first"
                android:textColor="@color/setting_text_color"
                android:textSize="16sp" />


            <ImageView
                android:layout_width="240dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/fplug_pairing" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
