<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_app_screen_capture"
    app:startDestination="@id/host_screen_check_manager">

    <fragment
        android:id="@+id/host_screen_check_manager"
        android:name="org.deviceconnect.android.deviceplugin.host.activity.recorder.screen.ManagerStartingFragment">

        <action
            android:id="@+id/action_check_to_main"
            app:destination="@+id/host_screen_capture_main"
            app:popUpTo="@id/host_screen_check_manager"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_permission_error_dialog"
            app:destination="@id/host_camera_permission_error_dialog" />

    </fragment>

    <fragment
        android:id="@+id/host_screen_capture_main"
        android:name="org.deviceconnect.android.deviceplugin.host.activity.recorder.screen.ScreenCaptureMainFragment">
    </fragment>

    <dialog
        android:id="@+id/host_camera_permission_error_dialog"
        android:name="org.deviceconnect.android.deviceplugin.host.activity.fragment.PermissionErrorDialogFragment"
        android:label="host_camera_permission_error_dialog" />

</navigation>