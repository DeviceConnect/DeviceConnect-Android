<?xml version="1.0" encoding="utf-8"?>
<manifest package="org.deviceconnect.android.uiapp"
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:versionCode="1"
          android:versionName="2.0.0">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".DConnectApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.ServiceListActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.ServiceActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false">
        </activity>

        <activity
            android:name=".activity.ProfileActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false">
        </activity>

        <activity
            android:name=".activity.ApiActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false">
        </activity>

        <activity
            android:name=".activity.ImageActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false">
        </activity>

        <activity
            android:name=".activity.PluginListActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false">
        </activity>

        <activity
            android:name=".activity.SettingsActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false">
        </activity>

    </application>

</manifest>