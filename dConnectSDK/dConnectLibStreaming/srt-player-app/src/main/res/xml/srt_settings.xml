<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="デバッグ"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="settings_debug_log"
            android:title="デバッグログ"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="SRT"
        app:iconSpaceReserved="false">

        <EditTextPreference
            android:defaultValue="120"
            android:key="settings_srt_rcvlatency"
            android:singleLine="true"
            android:title="RCVLATENCY"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:defaultValue="3000"
            android:key="settings_srt_conntimeo"
            android:singleLine="true"
            android:title="CONNTIMEO"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:defaultValue="5000"
            android:key="settings_srt_peeridletimeo"
            android:singleLine="true"
            android:title="PEERIDLETIMEO"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>