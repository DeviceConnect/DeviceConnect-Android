<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <org.deviceconnect.android.deviceplugin.theta.core.SphericalImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vr_view"
        android:layout_gravity="center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/left_ui"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ToggleButton
                android:id="@+id/change_vr_mode_0"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textOff=""
                android:textOn=""
                android:background="@drawable/vr_mode_toggle_button"
                />
            <Button
                android:id="@+id/theta_shutter_0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/vr_mode_screen_shot_button"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="16dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/right_ui"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ToggleButton
                android:id="@+id/change_vr_mode_1"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textOff=""
                android:textOn=""
                android:background="@drawable/vr_mode_toggle_button"
                />
            <Button
                android:id="@+id/theta_shutter_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/vr_mode_screen_shot_button"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="16dp"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>