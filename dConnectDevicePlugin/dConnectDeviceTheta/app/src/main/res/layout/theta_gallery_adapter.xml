<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theta_gallery_frame"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/gallery_thumb_size"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/gallery_top_margin"
        >

        <ImageView
            android:id="@+id/theta_thumb_data"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gallery_thumb_size"
            android:src="@drawable/theta_gallery_thumb"
            />
        <org.deviceconnect.android.deviceplugin.theta.view.ThetaLoadingProgressView
            android:id="@+id/theta_thumb_progress"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:visibility="visible"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/gallery_thumb_top"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/gallery_thumb_footer">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/data_type"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/data_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="right|bottom"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:text="2015/xx/xx"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>