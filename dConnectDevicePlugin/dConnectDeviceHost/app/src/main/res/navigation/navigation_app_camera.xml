<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/host_camera_manager">

    <fragment
        android:id="@+id/host_camera_manager"
        android:name="org.deviceconnect.android.deviceplugin.host.activity.camera.CheckManagerFragment">

        <action
            android:id="@+id/action_check_to_main"
            app:destination="@+id/host_camera_main_fragment"
            app:popUpTo="@id/host_camera_manager"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_permission_error_dialog"
            app:destination="@id/host_camera_permission_error_dialog" />

    </fragment>

    <fragment
        android:id="@+id/host_camera_main_fragment"
        android:name="org.deviceconnect.android.deviceplugin.host.activity.camera.CameraMainFragment"
        android:label="host_camera_main_fragment"
        tools:layout="@layout/fragment_host_camera_main">

    </fragment>

    <dialog
        android:id="@+id/host_camera_permission_error_dialog"
        android:name="org.deviceconnect.android.deviceplugin.host.activity.camera.PermissionErrorDialogFragment"
        android:label="host_camera_permission_error_dialog" />

</navigation>