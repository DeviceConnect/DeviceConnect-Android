<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_app_screen_capture"
    app:startDestination="@id/host_screen_check_manager">

    <fragment
        android:id="@+id/host_screen_check_manager"
        android:name="org.deviceconnect.android.deviceplugin.host.activity.recorder.screencast.ManagerStartingFragment">

        <action
            android:id="@+id/action_check_to_permission"
            app:destination="@+id/host_screen_permission_fragment"
            app:popUpTo="@id/host_screen_check_manager"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/host_screen_permission_fragment"
        android:name="org.deviceconnect.android.deviceplugin.host.activity.recorder.screencast.PermissionFragment">

        <action
            android:id="@+id/action_permission_to_usages_stats"
            app:destination="@+id/host_screen_usage_stats_fragment"
            app:popUpTo="@id/host_screen_permission_fragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_permission_error_dialog"
            app:destination="@id/host_camera_permission_error_dialog" />

    </fragment>

    <fragment
        android:id="@+id/host_screen_usage_stats_fragment"
        android:name="org.deviceconnect.android.deviceplugin.host.activity.recorder.screencast.UsageStatsFragment">

        <action
            android:id="@+id/action_usages_stats_main"
            app:destination="@+id/host_screen_capture_main"
            app:popUpTo="@id/host_screen_usage_stats_fragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_usages_stats_error_dialog"
            app:destination="@id/host_camera_usage_stats_error_dialog" />

    </fragment>

    <fragment
        android:id="@+id/host_screen_capture_main"
        android:name="org.deviceconnect.android.deviceplugin.host.activity.recorder.screencast.ScreencastMainFragment"
        android:label="host_screen_main_fragment" />

    <dialog
        android:id="@+id/host_camera_permission_error_dialog"
        android:name="org.deviceconnect.android.deviceplugin.host.activity.fragment.PermissionErrorDialogFragment"
        android:label="host_camera_permission_error_dialog" />

    <dialog
        android:id="@+id/host_camera_usage_stats_error_dialog"
        android:name="org.deviceconnect.android.deviceplugin.host.activity.fragment.UsageStatsErrorDialogFragment"
        android:label="host_camera_usage_stats_error_dialog" />

</navigation>