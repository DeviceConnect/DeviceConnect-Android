                      "channels": {
                        "type": "integer",
                        "title": "チャンネル数",
                        "description": "音声のチャンネル数。"
                      },
                      "sampleRate": {
                        "type": "number",
                        "title": "サンプルレート",
                        "description": "音声のサンプルレート。単位はHz。"
                      },
                      "sampleSize": {
                        "type": "integer",
                        "title": "サンプルサイズ",
