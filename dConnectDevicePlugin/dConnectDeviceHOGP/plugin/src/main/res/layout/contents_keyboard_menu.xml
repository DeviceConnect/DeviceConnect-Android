            android:layout_weight="1"
            android:background="@drawable/hogp_keyboard_button"
            android:text="@string/activity_control_key_3"/>

        <Button
            android:id="@+id/activity_control_key_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/hogp_keyboard_margin"
            android:layout_weight="1"
            android:background="@drawable/hogp_keyboard_button"
            android:text="@string/activity_control_key_4"/>

        <Button
            android:id="@+id/activity_control_key_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/hogp_keyboard_margin"
            android:layout_weight="1"
            android:background="@drawable/hogp_keyboard_button"
            android:text="@string/activity_control_key_5"/>

        <Button
            android:id="@+id/activity_control_key_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/hogp_keyboard_margin"
            android:layout_weight="1"
            android:background="@drawable/hogp_keyboard_button"
            android:text="@string/activity_control_key_6"/>

        <Button
            android:id="@+id/activity_control_key_7"
