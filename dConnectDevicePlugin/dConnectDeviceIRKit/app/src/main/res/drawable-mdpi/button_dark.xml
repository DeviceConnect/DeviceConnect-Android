<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_focused="true">
        <shape android:shape="rectangle" android:useLevel="false">
            <solid android:color="@android:color/holo_green_light" />

            <stroke android:width="1dp" android:color="#CCCCCC" />

            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true"><shape android:shape="rectangle" android:useLevel="false">
            <solid android:color="@android:color/darker_gray" />

            <stroke android:width="1dp" android:color="#CCCCCC" />

            <corners android:radius="10dp" />
        </shape></item>
    <item android:state_pressed="false"><shape android:shape="rectangle" android:useLevel="false">
            <solid android:color="#D3D3D3" />

            <stroke android:width="1dp" android:color="#CCCCCC" />

            <corners android:radius="10dp" />
        </shape></item>


</selector>